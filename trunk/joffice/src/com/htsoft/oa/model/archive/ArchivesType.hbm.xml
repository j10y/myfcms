<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN" 
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class
        name="com.htsoft.oa.model.archive.ArchivesType"
        table="archives_type"
        select-before-update="false"
        dynamic-update="false"
        dynamic-insert="false"
        optimistic-lock="version"
    >
		<id
            name="typeId"
            column="typeId"
            type="java.lang.Long"
            length="19"
        >
            <generator class="native"/>
        </id>
         <property
            name="typeName"
            type="java.lang.String"
            update="true"
            insert="true"
            access="property"
            column="typeName"
            length="128"
            not-null="true"
            unique="false"
        />
        <property
            name="typeDesc"
            type="java.lang.String"
            update="true"
            insert="true"
            access="property"
            column="typeDesc"
            length="256"
            not-null="false"
            unique="false"
        />
  <!-- exported bi-directional one-to-many association to ArchTemplate -->
	<set name="archTemplates"
	     table="arch_template"
	     lazy="true"
	     inverse="true"
	     cascade="save-update"
	     sort="unsorted"
	>
		<key>
			<column name="typeId"/>
		</key>
		<one-to-many
			class="com.htsoft.oa.model.archive.ArchTemplate"
		/>
	</set>     
    </class>
</hibernate-mapping>
