	<bean id="dataSourceTarget"
		class="org.apache.commons.dbcp.BasicDataSource">
		<property name="driverClassName">
			<value>com.mysql.jdbc.Driver</value>
		</property>
		<property name="url">
			<value>jdbc:mysql://localhost:3306/bdoa?useUnicode=true&amp;characterEncoding=utf8</value>
		</property>
		<property name="username">
			<value>root</value>
		</property>
		<property name="password">
			<value>1234</value>
		</property>
	</bean>

	<bean id="sessionFactory"
		class="org.springframework.orm.hibernate3.annotation.AnnotationSessionFactoryBean">
		<property name="dataSource">
			<ref bean="dataSource" />
		</property>
		<property name="hibernateProperties">
			<props>
				<prop key="hibernate.dialect">org.hibernate.dialect.MySQLDialect</prop>
				<prop key="hibernate.hbm2ddl.auto">update</prop>
				<prop key="hibernate.show_sql">true</prop>
			</props>
		</property>
		<property name="packagesToScan"
			value="com.hxzy.*.*.model,com.bdzb.oa.*.model">
		</property>
	</bean>

	<bean id="transactionManager"
		class="org.springframework.orm.hibernate3.HibernateTransactionManager"
		abstract="false" lazy-init="default" autowire="default"
		dependency-check="default">
		<property name="sessionFactory">
			<ref bean="sessionFactory" />
		</property>
	</bean>

	<bean id="daoTemplate" abstract="true">

		<property name="sessionFactory">
			<ref bean="sessionFactory" />
		</property>
	</bean>

	<bean id="logDao" class="com.hxzy.common.log.dao.impl.LogDaoImpl"
		parent="daoTemplate" />

	<bean id="userDao" class="com.hxzy.common.user.dao.impl.UserDaoImpl"
		parent="daoTemplate" />

	<bean id="privilegeDao"
		class="com.hxzy.common.user.dao.impl.PrivilegeDaoImpl"
		parent="daoTemplate" />

	<bean id="roleDao" class="com.hxzy.common.user.dao.impl.RoleDaoImpl"
		parent="daoTemplate" />

	<bean id="dictDao" class="com.hxzy.common.dict.dao.impl.DictDaoImpl"
		parent="daoTemplate" />

	<bean id="expertDao"
		class="com.bdzb.oa.expert.dao.impl.ExpertDaoImpl"
		parent="daoTemplate" />
</beans>
